<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <TextView
        style="@android:style/Widget.Material.Light.TextView"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:text="Laws of Geometric Shapes"
        android:textColor="#07450A"
        android:textColorHighlight="#E82E2E"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/math"
        android:layout_marginTop="10dp"

        />

    <EditText
        style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:id="@+id/UserName"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Enter Your Name My Friend .. "
        android:textColor="#07450A"
        android:textColorHighlight="#E82E2E"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ImageButton
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/start"
        android:id="@+id/goClick"
android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="btnGoOnclick"
android:background="@color/white"
        />


</LinearLayout>